[URL Rewrite]
# Ensure these endpoints are included in the subscription so Loon will fetch the plugin
^http://api\.gdianchou\.com:/app/user/userInfo
^http://api\.gdianchou\.com:/app/account/detail/balance
^http://api\.gdianchou\.com:/app/account/detail/balance/sum

[Script]
# For subscription usage scripts are usually remote; replace <RAW_JS_URL> with the raw URL (e.g. https://raw.githubusercontent.com/username/repo/main/dc_modify.js)
http-response ^https?://api\.gdianchou\.com/app/account/detail/balance/sum$ requires-body=1,script-path=<RAW_JS_URL>
http-response ^https?://api\.gdianchou\.com/app/account/detail/balance$ requires-body=1,script-path=<RAW_JS_URL>

[MITM]
hostname = api.gdianchou.com
